<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:gravity="bottom|end"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/dpView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:textColor="@color/black"
            android:paddingEnd="30dp"
            android:gravity="bottom|end"
            android:paddingVertical="20dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/ansView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:paddingEnd="30dp"
            android:gravity="bottom|end"
            android:paddingVertical="20dp"
            android:layout_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scifibutton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:text="SCI-FI"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        >
<!--        set the visibility layout gone here-->
        <LinearLayout
            android:id="@+id/llScifi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top"
            android:visibility="gone"
            android:paddingStart="0dp"
            android:layout_weight="1.3"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCos"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:cornerRadius="0dp"
                android:text="COS"
                android:textSize="15dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:elevation="0dp"
                android:onClick="onscifi"
                android:textColor="@color/black"
                app:rippleColor="#A8A8A8"
                style="?android:attr/borderlessButtonStyle"
                />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSin"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    app:cornerRadius="0dp"
                    android:text="SIN"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    android:onClick="onscifi"
                    android:textColor="@color/black"
                    app:rippleColor="#A8A8A8"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTan"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    app:cornerRadius="0dp"
                    android:text="tan"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    android:onClick="onscifi"
                    android:textColor="@color/black"
                    app:rippleColor="#A8A8A8"
                    style="?android:attr/borderlessButtonStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPow"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    app:cornerRadius="0dp"
                    android:text="^"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    android:onClick="onscifi"
                    android:textColor="@color/black"
                    app:rippleColor="#A8A8A8"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSqrt"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    app:cornerRadius="0dp"
                    android:text="SQRT"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    android:onClick="onscifi"
                    android:textColor="@color/black"
                    app:rippleColor="#A8A8A8"
                    style="?android:attr/borderlessButtonStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLog"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    app:cornerRadius="0dp"
                    android:text="LOG"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    android:onClick="onscifi"
                    android:textColor="@color/black"
                    app:rippleColor="#A8A8A8"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnlan"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:cornerRadius="0dp"
                    android:text="LAN"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="15dp"

                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    android:onClick="onscifi"
                    android:textColor="@color/black"
                    app:rippleColor="#A8A8A8"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.7"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAC"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="AC"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:onClick="onClear"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:onClick="onBackSpace"
            app:icon="@drawable/ic_baseline_keyboard_backspace_24"
            app:iconTint="@color/black"
            android:textSize="20dp"
            app:iconGravity="textStart"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="+/-"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btndivide"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="/"
            android:onClick="onOperate"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            app:rippleColor="#A8A8A8"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeven"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="7"
            android:onClick="onDigit"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEight"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="8"
            android:textSize="20dp"
            android:onClick="onDigit"
            app:iconGravity="textStart"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNine"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="9"
            android:textSize="20dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="*"
            android:onClick="onOperate"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            app:rippleColor="#A8A8A8"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFour"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="4"
            android:textSize="20dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFive"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="5"
            android:textSize="20dp"
            android:onClick="onDigit"
            app:iconGravity="textStart"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSix"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="6"
            android:textSize="22dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtract"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="-"
            android:textSize="20dp"
            android:onClick="onOperate"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            app:rippleColor="#A8A8A8"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOne"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="1"
            android:textSize="20dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTwo"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="2"
            android:textSize="20dp"
            android:onClick="onDigit"
            app:iconGravity="textStart"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThree"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="3"
            android:textSize="20dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="+"
            android:onClick="onOperate"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            app:rippleColor="#A8A8A8"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMod"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="%"
            android:onClick="onOperate"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="0"
            android:textSize="20dp"
            android:onClick="onDigit"
            app:iconGravity="textStart"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="."
            android:onClick="onDecimalPoint"
            android:textSize="28dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:textColor="@color/black"
            app:rippleColor="#A8A8A8"
            style="?android:attr/borderlessButtonStyle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cornerRadius="0dp"
            android:text="="
            android:onClick="onEquals"
            android:textSize="20dp"
            android:layout_weight="1"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            app:rippleColor="#A8A8A8"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>